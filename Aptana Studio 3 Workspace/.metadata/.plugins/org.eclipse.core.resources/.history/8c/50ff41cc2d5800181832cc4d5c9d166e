def greeter(name, surname=''):
    'greeter function'
    return 'hello {} {}'.format(name, surname)
    
def square(x, y=2):
    return x ** y

def tree(n=5):
    out = []
    for i in range(1,n+1):
        out.append(('* '*i).center(n*2))
    return '\n'.join(out)

def factorial(n):
    out = 1
    for i in range(1,n+1):
        out *= i
    return out

def factorial1(n):
    out = n
    for i in range(n-1,0,-1):
        out *= i
    return out

def factorialr(n):
    if n>1:
        return n * factorialr(n-1)
    else:
        return 1

def factorialr1(n):
    return n * factorialr(n-1) if n>1 else 1

def make_double(fn):
    def inner(arg):
        return 2*fn(arg)
    return inner

@make_double
def cube(x):
    return x**3
#cube = make_double(cube)

def show_args(*args, **kwargs):
    print args, kwargs

if __name__ == '__main__':
   show_args()






