class Person(object):
   
    def __init__(self, name='', age=0):
        '''
        Constructor
        '''
        self.name = name
        self.age = age
    
    def talk(self):
        return 'hello my name is {}'.format(name)
    
    def walk(self):
        age = self.age
        if age <= 1:
            return "Crawl - 4 legs"
        elif age <= 75
            return "walk - 2 legs"
        else:
            return "Hobble - 3 legs"